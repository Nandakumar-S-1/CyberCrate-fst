<%- include('../layouts/admin/header.ejs') %>
<%- include('../layouts/admin/sidebar.ejs') %>

<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="header-title">
            <h2>Dashboard</h2>
            <p>Home > Dashboard</p>
        </div>
        <div class="date-time">
            <div class="logOut">
                <a href="/admin/logout" class="btn btn-outline-warning">Log Out</a>
            </div>
            <div class="date-range">
                <i class="far fa-calendar"></i>
                <span>Oct 11,2023 - Nov 11,2022</span>
            </div>
            <div class="current-time">
                <i class="far fa-clock"></i>
                <span id="clock"></span>
            </div>
        </div>
    </div>

    <!-- Order Statistics -->
    <div class="order-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-info">
                <h3>Total Orders</h3>
                <div class="stat-number"></div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-info">
                <h3>Active Orders</h3>
                <div class="stat-number"></div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-info">
                <h3>Completed Orders</h3>
                <div class="stat-number"></div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-undo"></i>
            </div>
            <div class="stat-info">
                <h3>Return Orders</h3>
                <div class="stat-number"></div>
                <div class="stat-change">
                    <i class="fas fa-arrow-up"></i>
                    <span></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales Graph and Best Sellers -->
    <div class="dashboard-content">
        <div class="sales-graph">
            <div class="graph-header">
                <h3>Sale Graph</h3>
                <div class="graph-filters">
                    <button class="filter-btn">WEEKLY</button>
                    <button class="filter-btn active">MONTHLY</button>
                    <button class="filter-btn">YEARLY</button>
                </div>
            </div>
            <div class="graph-container">
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="best-sellers">
            <div class="section-header">
                <h3>Best Sellers</h3>
                <button class="more-btn"><i class="fas fa-ellipsis-v"></i></button>
            </div>
            <div class="product-list">
                <% bestSellingProducts.forEach((product) => { %>
                    <div class="product-item">
                        <img src="/img/products/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                        <div class="product-info">
                            <h4><%= product.productName %></h4>
                            <p class="sales">Stock left: <%= product.quantity %></p>
                            <p class="brand">₹<%= product.salePrice %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
            <button class="report-btn">REPORT</button>
        </div>
        
    </div>


    <div class="new-customers">
        <div class="section-header">
            <h3>New Customers</h3>
            <button class="more-btn"><i class="fas fa-ellipsis-v"></i></button>
        </div>
        <table class="orders-table">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>Registration Date</th>
                </tr>
            </thead>
            <tbody>
                <% newCustomers.forEach((customer) => { %>
                    <tr>
                        <td><%= customer.name %></td>
                        <td><%= customer.email %></td>
                        <td><%= customer.createdOn ? customer.createdOn.toDateString() : 'N/A' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    
    

    <!-- Recent Orders -->
    <div class="recent-orders">
        <div class="section-header">
            <h3>Recent Orders</h3>
            <button class="more-btn"><i class="fas fa-ellipsis-v"></i></button>
        </div>
        <table class="orders-table">
            <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th>Product</th>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Customer Name</th>
                    <th>Status</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="checkbox"></td>
                    <td>Sony PS5</td>
                    <td>#25426</td>
                    <td>Nov 8th,2024</td>
                    <td>
                        <div class="customer">
                            <img src="/images/avatars/user1.jpg" alt="Kavin">
                            <span>Kavin</span>
                        </div>
                    </td>
                    <td><span class="status delivered">Delivered</span></td>
                    <td>₹76,818</td>
                </tr>
                <!-- Add more order rows -->
            </tbody>
        </table>
    </div>


    
</div>


<!-- Add Chart.js for the sales graph -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    function updateClock() {
        const now = new Date();
        const time = now.toLocaleTimeString('en-US', { 
            hour: '2-digit', 
            minute: '2-digit', 
            second: '2-digit',
            hour12: true 
        });
        document.getElementById('clock').textContent = time;
    }

    // Update clock immediately and then every second
    updateClock();
    setInterval(updateClock, 1000);

    // Initialize sales chart
    const ctx = document.getElementById('salesChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'],
            datasets: [{
                label: 'Sales',
                data: [100, 120, 125, 130, 170, 250],
                borderColor: '#4070f4',
                tension: 0.4,
                fill: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        display: true,
                        color: '#f0f0f0'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>

