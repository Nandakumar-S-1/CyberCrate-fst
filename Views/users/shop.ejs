<script>

    function addToCart(productId) {
        fetch('/cart/addItem', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, quantity: 1 })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire('Added!', 'The item has been added to your cart.', 'success');
            } else {
                Swal.fire('Error!', 'Failed to add the item to your cart.', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire('Error!', 'An error occurred while adding the item to your cart.', 'error');
        });
    }

    function addToFavorites(productId) {
        fetch('/favorites/addItem', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire('Added!', 'The item has been added to your favorites.', 'success');
            } else {
                Swal.fire('Error!', 'Failed to add the item to your favorites.', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire('Error!', 'An error occurred while adding the item to your favorites.', 'error');
        });
    }
</script>

