<%- include('../layouts/user/header.ejs') %>

<div class="shop-container">
    <aside class="sidebar">
        <h2>Filters</h2>
        <form id="filter-form">
            <div class="filter-group">
                <h3>Categories</h3>
                <input type="text" placeholder="Search Categories" id="category-search">
                <div id="category-list">
                    <% categories.slice(0, 3).forEach(category => { %>
                        <label>
                            <input type="checkbox" name="category" value="<%= category._id %>"> <%= category.name %>
                        </label>
                    <% }); %>
                    <button type="button" class="btn btn-primary"
                            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">more
                    </button>
                </div>
                <div id="all-categories" style="display:none;">
                    <% categories.slice(3).forEach(category => { %>
                        <label>
                            <input type="checkbox" name="category" value="<%= category._id %>"> <%= category.name %>
                        </label>
                    <% }); %>
                </div>
            </div>
            <div class="filter-group">
                <h3>Brands</h3>
                <input type="text" placeholder="Search Brands" id="brand-search">
                <div id="brand-list">
                    <% brands.slice(0, 5).forEach(brand => { %>
                        <label>
                            <input type="checkbox" name="brand" value="<%= brand._id %>"> <%= brand.brandName %>
                        </label>
                    <% }); %>
                    <button type="button" class="btn btn-primary"
                            style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">more
                    </button>
                </div>
                <div id="all-brands" style="display:none;">
                    <% brands.slice(5).forEach(brand => { %>
                        <label>
                            <input type="checkbox" name="brand" value="<%= brand._id %>"> <%= brand.brandName %>
                        </label>
                    <% }); %>
                </div>
            </div>
            <div class="filter-group">
                <h3>Price</h3>
                <div id="price-slider" style="margin: 20px 0;"></div>
                <div class="price-range">
                    <span id="min-price">₹5000</span> - <span id="max-price">₹500000</span>
                </div>
                <input type="hidden" name="minPrice" id="min-price-input">
                <input type="hidden" name="maxPrice" id="max-price-input">
            </div>
            
            <button type="submit">Apply Filters</button>
        </form>
    </aside>
    
    <main class="product-list">
        <h1>Shop Products</h1>
        <div class="products">
            <% products.forEach(product => { %>
                <div class="product-card">
                    <a href="/productDetails/<%= product._id %>">
                        <img src="/img/products/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                        <h2><%= product.productName %></h2>
                    </a>
                    <p>₹<%= product.salePrice %></p>
                    <div class="product-buttons">
                        <button class="icon-btn" onclick="addToCart('<%= product._id %>')">
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                        <button class="icon-btn" onclick="addToFavorites('<%= product._id %>')">
                            <i class="fas fa-heart"></i>
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="pagination">
            <% for(let i = 1; i <= totalPages; i++) { %> 
                <a href="?page=<%= i %>&limit=<%= limit %>" class="<%= currentPage === i ? 'active' : '' %>">
                    <%= i %>
                </a>
            <% } %>
        </div>
    </main>
</div>

<style>
    .shop-container {
        display: flex;
    }
    .sidebar {
        width: 300px;
        padding: 20px;
        background-color: #f5f5f5;
    }
    .filter-group {
        margin-bottom: 20px;
    }
    .price-range {
        display: flex;
        justify-content: space-between;
    }
    .product-list {
        flex: 1;
        padding: 20px;
    }
    .products {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Three products per row */
        gap: 20px;
    }
    .product-card {
        width: 100%;
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        text-align: center;
    }
    .product-card img {
        max-width: 100%;
        height: auto;
    }
    .product-card h2 {
        font-size: 1em; /* Decreased font size */
    }
    .product-card p {
        font-size: 0.9em; /* Decreased font size */
    }
    .product-buttons {
        margin-top: 10px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }
    .icon-btn {
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
    }
    .icon-btn i {
        color: #1a237e; /* Cart color */
    }
    .icon-btn:last-child i {
        color: #e53935; /* Favorite color */
    }
    .pagination { 
        margin-top: 20px; 
        text-align: center; 
    } .pagination a { 
        display: inline-block;
        padding: 10px 15px; 
        margin: 0 5px; 
        border: 1px solid #ddd; 
        color: #1a237e; 
        text-decoration: none; 
        border-radius: 5px; 
    } .pagination a.active { 
        background-color: #1a237e; 
        color: #fff; 
    }
</style>

<script>

    document.addEventListener('DOMContentLoaded', function() {

        const priceSlider = document.getElementById('price-slider');
        noUiSlider.create(priceSlider, {
            start: [5000, 500000],
            connect: true,
            step: 1000,
            range: {
                'min': 5000,
                'max': 500000
            },
            format: wNumb({
                decimals: 0,
                prefix: '₹'
            })
        });

        priceSlider.noUiSlider.on('update', function (values, handle) {
            document.getElementById('min-price').innerHTML = values[0];
            document.getElementById('max-price').innerHTML = values[1];
            document.getElementById('min-price-input').value = values[0].replace('₹', '');
            document.getElementById('max-price-input').value = values[1].replace('₹', '');
        });


        document.getElementById('filter-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            fetch('/shop/filter', {
                method: 'POST',
                body: JSON.stringify(Object.fromEntries(formData)),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                const productsContainer = document.querySelector('.products');
                productsContainer.innerHTML = '';
                data.products.forEach(product => {
                    const productCard = document.createElement('div');
                    productCard.classList.add('product-card');
                    productCard.innerHTML = `
                        <img src="/img/products/${product.productImage[0]}" alt="${product.productName}">
                        <h2>${product.productName}</h2>
                        <div class="product-price">
                            <span class="current-price">₹${product.salePrice}</span>
                            <span class="original-price">₹${product.realPrice}</span>
                        </div>
                        <p>Stock left: ${product.quantity}</p>
                        <div class="product-buttons">
                            <button class="icon-btn" onclick="addToCart('${product._id}')">
                                <i class="fas fa-shopping-cart"></i>
                            </button>
                            <button class="icon-btn" onclick="addToFavorites('${product._id}')">
                                <i class="fas fa-heart"></i>
                            </button>
                        </div>
                    `;
                    productsContainer.appendChild(productCard);
                });
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });


    document.getElementById('category-search').addEventListener('input', function (e) {
        const query = e.target.value.toLowerCase();
        document.querySelectorAll('#category-list label').forEach(label => {
            const text = label.innerText.toLowerCase();
            label.style.display = text.includes(query) ? '' : 'none';
        });
    });

    document.getElementById('brand-search').addEventListener('input', function (e) {
        const query = e.target.value.toLowerCase();
        document.querySelectorAll('#brand-list label').forEach(label => {
            const text = label.innerText.toLowerCase();
            label.style.display = text.includes(query) ? '' : 'none';
        });
    });

    document.getElementById('show-more-categories').addEventListener('click', function () {
        document.getElementById('all-categories').style.display = 'block';
        this.style.display = 'none';
    });

    document.getElementById('show-more-brands').addEventListener('click', function () {
        document.getElementById('all-brands').style.display = 'block';
        this.style.display = 'none';
    });
</script>


